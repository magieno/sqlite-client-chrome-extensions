{
    "manifest_version": 3,
    "name": "SQLite Client",
    "description": "SQLite Client to easily edit SQLite databases stored in OPFS",
    "version": "1.0",
    "devtools_page": "devtools.html",
    "background": {
        "service_worker": "assets/js/service-worker.mjs",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://localhost/*",
                "http://0.0.0.0/*",
                "http://127.0.0.1/*"
            ],
            "run_at": "document_idle",
            "js": ["assets/js/content-script.js"]
        }
    ]
}