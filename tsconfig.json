{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module":"es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "strictNullChecks": false,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "removeComments": true,
    "outDir": "out/tsc",
    "typeRoots": [
      "node_modules/@types"
    ],

    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "./**/*.spec.ts", "dist", "out"],
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  }
}

